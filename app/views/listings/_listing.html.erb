<div id="<%= dom_id listing %>">

<div class="row">
  <div class="col-md-6">
  <div class="tumbnail">
  <%= image_tag @listing.image.url if @listing.present? %>
  </div>
  </div>
  <div class="col-md-6">
  <h3>Name: <%= listing.name %> </h3>
  <p>Price: <%= number_to_currency(listing.price) %> </p>
  <p>Description: <%= listing.description %> </p>
  </div>  

</div>

</div>
